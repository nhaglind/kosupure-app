<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="demo">
                    <ul id="lightSlider">
                        <% @listing.images.each_index do |i| %>
                        <li>
                            <%= image_tag @listing.images[i].url, class: "img-responsive pink-border" %>
                        </li>
                        <% end %>
                    </ul>
                </div>
                <script>
                    $('#lightSlider').lightSlider({gallery: true, item: 1, loop: true, slideMargin: 0, thumbItem: 9});
                </script>
            </div>
            <div class="col-md-6">
                <p>
                    <span class="label label__default"><%= @listing.name%></span>
                </p>
                <ul class="list-group">
                    <li class="list-group-item">Amount:
                        <%= number_to_currency(@listing.price) %></li>
                    <li class="list-group-item">Quantity:
                        <%= @listing.quantity %></li>
                    <li class="list-group-item">Seller:
                        <%= @listing.user.name %></li>
                    <li class="list-group-item">Description:
                        <%= @listing.description %></li>
                    <hr>
                    <% if @listing.trade? %>
                    <div class="jumbotron accepts__trades" alt="accepts trades"></div>
                    <% end %>
                </ul>
                <%= link_to "Buy It Now", new_listing_order_path(@listing), class: "btn btn-primary", data: { no_turbolink: true}  %>
                <% if @listing.trade? %>
                <%= link_to "Contact Seller For Trade", new_listing_order_path(@listing), class: "btn btn-primary", data: { no_turbolink: true}  %>
                <% end %>
            </div>
        </div>
    </div>
</div>
<% if current_user == @listing.user %>
<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-primary" %>
<% end %>
<%= link_to 'Back', listings_path, class: "btn btn-primary" %>
