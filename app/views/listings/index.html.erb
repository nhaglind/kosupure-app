<div class="jumbotron">
  <h1>Kosupure</h1>
  <h2>Cosplay Cantina</h2>
</div>
<nav class="navbar">
  <div class="navbar-container">
    <!-- Navbar btn -->
    <div class="navbar-button">
      <a href="#" class="navbar-btn"><i class="fa fa-heart"></i>Feeling lucky punk?</a>
    </div>
    <!-- Navbar search -->
    <div class="navbar-search">
      <%= form_tag("/listings", method: "get", class: "search-form") do %>
        <%= text_field_tag(:search, params[:search]) %>
        <%#= select_tag(:category, options_from_collection_for_select(Category.only_parents, "id", "name")) %>
        <%= submit_tag("Search", :name => nil) %>
      <% end %>
    </div>
  </div>
  <div class="center">
    <% if params[:category].blank? %>
      <% Category.only_parents.each do |category| %><span class='btn btn-default category-button'>
          <%= link_to category.name, params.merge(category: category.id) %></span>
      <% end %>
    <% else %>
      <% c = Category.find_by_id(params[:category]) %><span class='btn btn-default category-button'>
        <%= link_to "Up One Level", params.merge(category: c.parent_id) %></span><span class='btn btn-default category-button'>
        <%= c.name %>
        <i class="glyphicon glyphicon-play"></i>
        <% Category.sub_display(params[:category]).each do |category| %></span><span class='btn btn-default category-button'>
          <%= link_to category.name, params.merge(category: category.id) %>
        <% end %>
      <% end %>
    </span>
  </div>
</span>
</div>
</div>
</nav>
<%# Category.only_parents.each do |category| %>
  <%#= link_to category.name, params.merge(category: category.name) %>
  <%# end %>
</div>
<div class="center">
  <%= link_to "Highest Price", params.merge(order: "price DESC") %>
  <%= link_to "Lowest Price", params.merge(order: "price ASC") %>
  <%= link_to "Most Recent", params.merge(order: "created_at DESC") %>
</div>
<hr>
<section class="listing">
  <div class=”center”>
    <% @listings.in_groups_of(3, false) do |listing_array| %>
      <div class="row">
        <% listing_array.each do |listing| %>
          <div class="col-md-2">
            <div class="thumbnail">
              <%= listing_link(listing) %>
            </div>
          </div>
          <div class="col-md-2">
            <div class="caption">
              <h3><%= link_to listing.name, listing %></h3>
              <div class="bold-price">
                <p>
                  <%= number_to_currency(listing.price, locale: "en") %>
                </p>
              </div>
              <p><%= "Sold by #{listing.user.name}" %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <br>
  <%= will_paginate @listings, renderer: BootstrapPagination::Rails %>
  <br>
  <% if (user_signed_in?) %>
    <%= link_to "New Listing", new_listing_path, class: "btn btn-primary", data: { no_turbolink: true } %>
  <% end %>
</section>